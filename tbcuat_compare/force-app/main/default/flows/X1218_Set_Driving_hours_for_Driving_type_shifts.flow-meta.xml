    <description>Sets the driving hours to the total assigned hours and non driving hours to 0 if a shift is created against a Driving type job role</description>
    <environments>Default</environments>
    <formulas>
        <name>NonDrivingHours</name>
        <dataType>Number</dataType>
        <expression>if({!$Record.Non_Driving_Hours__c}&gt;0,{!$Record.Non_Driving_Hours__c},0)</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>RecalculationofDrivingHours</name>
        <dataType>Number</dataType>
        <expression>IF(
  /* Outer IF to prevent negative values */
  (
    IF(
      {!$Record.Non_Driving_Hours__c} &gt; 0,
      (
        IF(
          {!$Record.sirenum__Billable_Shift_Length_Decimal__c} &gt; 0,
          {!$Record.sirenum__Billable_Shift_Length_Decimal__c},
          {!$Record.sirenum__Absolute_Shift_Length__c}
        ) - {!$Record.Non_Driving_Hours__c}
      ),
      IF(
        {!$Record.sirenum__Billable_Shift_Length_Decimal__c} &gt; 0,
        {!$Record.sirenum__Billable_Shift_Length_Decimal__c},
        {!$Record.sirenum__Absolute_Shift_Length__c}
      )
    )
  ) &lt; 0,
  0,
  /* Else return the calculated value */
  IF(
    {!$Record.Non_Driving_Hours__c} &gt; 0,
    (
      IF(
        {!$Record.sirenum__Billable_Shift_Length_Decimal__c} &gt; 0,
        {!$Record.sirenum__Billable_Shift_Length_Decimal__c},
        {!$Record.sirenum__Absolute_Shift_Length__c}
      ) - {!$Record.Non_Driving_Hours__c}
    ),
    IF(
      {!$Record.sirenum__Billable_Shift_Length_Decimal__c} &gt; 0,
      {!$Record.sirenum__Billable_Shift_Length_Decimal__c},
      {!$Record.sirenum__Absolute_Shift_Length__c}
    )
  )
)</expression>
        <scale>2</scale>
    </formulas>
